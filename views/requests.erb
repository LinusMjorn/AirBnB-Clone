<head>
  <link rel='stylesheet' href='/mystyle.css' >
  <link rel='icon' type='image/png' href='bear.png'>
  <title>"Requests"</title>
</head>

<body>
<nav>
  <form method='get' action='/' id='home'>
    <input class='navbar' type='submit' value='Home'>
  </form>
  <% if @current_user %>
    <form method='get' action='/dashboard' id='dashboard'>
      <input class='navbar' type='submit' value='Dashboard'>
    </form>  
    <form method='get' action='/requests' id='requests'>
      <input class='navbar' type='submit' value='Manage Requests'>
    </form>
    <form method='post' action='/sessions/logout' id='logout'>
      <input class='navbar' type='submit' value='Log Out'>
    </form>
  <% end %>
</nav>
<a href='/'>
<img id="logo" src="/bear.png" href='/'>
</a>
<h3><%= @current_user.username %>: Your requests are listed below</h3>


<ul>
    <% @requests.each do |request| %>
    <li> You have requested: <%= Request.get_space(request.space_id).description  %> on <%= request.date %> for £<%= Request.get_space(request.space_id).price%> per night.
     <% if request.confirmed? %>
     <li> Awaiting Confirmation from landlord </li> 
    <%else%>
    <li> Confirmed by the landlord! </li>
    <%end%>
    </li>
    <%end%>
</ul>

<h3><%= @current_user.username %>: Requests for your properties are listed below</h3>

<ul>
  <% @requests_for.each do |request| %>
    <div style="border-style: groove; border-color: white; padding: 5px;">
    <li> <%=Request.get_username(request.guest_id)%> requested: <%= Request.get_space(request.space_id).description  %> on <%= request.date %> for £<%= Request.get_space(request.space_id).price%> per night.
    </li>
    <% if request.confirmed? %>
      <li> awaiting confirmation  </li>
      <form action="/request/<%=request.id%>/respond" method="get">
      <input type="submit" value="respond">
      </form>
    </li> 
    <% else %>
      <li> Booking Confirmed </li>
    <% end %>
    </div>
    <br>
  <%end%>
  
  
</ul>



</body>